<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Arc?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.ToggleButton?>
<AnchorPane fx:id="baseAnchorPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="xyz.andrick.figures.controllers.SessionSceneController">
    <AnchorPane fx:id="imageAnchorPane" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <ImageView fx:id="imageView" fitHeight="36.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true"/>
        <AnchorPane fx:id="clockAnchorPane" styleClass="shaded-anchor-pane" AnchorPane.leftAnchor="10.0"
                    AnchorPane.topAnchor="10.0">
            <Arc fx:id="timerArc" layoutX="30.0" layoutY="30.0" length="360.0" radiusX="20.0" radiusY="20.0"
                 startAngle="90.0" stroke="TRANSPARENT" strokeType="INSIDE" type="ROUND"/>
        </AnchorPane>
        <AnchorPane layoutX="721.0" layoutY="20.0" styleClass="shaded-anchor-pane" AnchorPane.rightAnchor="10.0"
                    AnchorPane.topAnchor="10.0">
            <Button fx:id="quitButton" alignment="CENTER" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0"/>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </AnchorPane>
    </AnchorPane>
    <HBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <HBox alignment="CENTER" spacing="15.0" styleClass="shaded-anchor-pane" HBox.hgrow="NEVER">
            <Button fx:id="previousButton" styleClass="primary-button"/>
            <Button fx:id="pauseButton" styleClass="primary-button"/>
            <Button fx:id="nextButton" styleClass="primary-button"/>
            <ToggleButton fx:id="greyscaleButton" styleClass="primary-button"/>
            <ToggleButton fx:id="gridButton" styleClass="primary-button"/>
            <HBox.margin>
                <Insets bottom="15.0"/>
            </HBox.margin>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </HBox>
    </HBox>
    <AnchorPane fx:id="breakAnchorPane" styleClass="break-anchor-pane" visible="false" AnchorPane.bottomAnchor="0.0"
                AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <VBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">
            <Text fx:id="breakText" styleClass="display-text" text="Break" textAlignment="CENTER" wrappingWidth="90.0"/>
            <Label fx:id="breakTimeLabel" alignment="CENTER" contentDisplay="CENTER" text="Time left:"
                   textAlignment="CENTER" textFill="WHITE">
                <VBox.margin>
                    <Insets bottom="15.0"/>
                </VBox.margin>
                <font>
                    <Font name="Inter Regular" size="13.0"/>
                </font>
            </Label>
            <HBox alignment="CENTER" spacing="10.0">
                <Button fx:id="breakResumeButton" mnemonicParsing="false" styleClass="primary-button" text="Resume"/>
                <Button fx:id="breakQuitButton" mnemonicParsing="false" styleClass="primary-button" text="Quit"/>
            </HBox>
        </VBox>
    </AnchorPane>
    <AnchorPane fx:id="pauseAnchorPane" styleClass="break-anchor-pane" visible="false" AnchorPane.bottomAnchor="0.0"
                AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <VBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">
            <Text fx:id="pauseText" styleClass="display-text" text="Paused" textAlignment="CENTER"
                  wrappingWidth="90.0"/>
            <Label fx:id="pauseTimeLabel" alignment="CENTER" contentDisplay="CENTER" text="Image time left:"
                   textAlignment="CENTER" textFill="WHITE">
                <VBox.margin>
                    <Insets bottom="15.0"/>
                </VBox.margin>
                <font>
                    <Font name="Inter Regular" size="13.0"/>
                </font>
            </Label>
            <HBox alignment="CENTER" spacing="10.0">
                <Button fx:id="pauseResumeButton" mnemonicParsing="false" styleClass="primary-button" text="Resume"/>
                <Button fx:id="pauseQuitButton" mnemonicParsing="false" styleClass="primary-button" text="Quit"/>
            </HBox>
        </VBox>
    </AnchorPane>
    <AnchorPane layoutX="721.0" layoutY="20.0" styleClass="shaded-anchor-pane" AnchorPane.leftAnchor="10.0"
                AnchorPane.bottomAnchor="10.0">
        <Label fx:id="sessionProgressLabel" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0" textFill="WHITE">
            <font>
                <Font name="Inter Regular" size="13.0"/>
            </font>
        </Label>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
    </AnchorPane>
</AnchorPane>
