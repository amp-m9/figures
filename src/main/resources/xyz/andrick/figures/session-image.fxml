                     <children>
                        <Button fx:id="breakQuitButton" mnemonicParsing="false" text="Quit" />
                        <Button fx:id="breakResumeButton" mnemonicParsing="false" text="Resume" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
