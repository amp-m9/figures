      </AnchorPane>
      <ToolBar prefHeight="40.0" prefWidth="200.0" style="-fx-border-radius: 20;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <items>
          <Button fx:id="quitButton" mnemonicParsing="false" text="Quit">
            </Button>
            <Button fx:id="playPauseButton" mnemonicParsing="false" text="Pause">
            </Button>
            <Button fx:id="nextButton" mnemonicParsing="false" text="Next">
            </Button>
            <Button fx:id="previousButton" mnemonicParsing="false" text="Previous">
            </Button>
        </items>
      </ToolBar>
      <AnchorPane fx:id="breakAnchorPane" style="-fx-background-color: black;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
